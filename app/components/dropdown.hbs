<div class='dropdown'>
  <button
    class='btn btn-primary dropdown-toggle'
    type='button'

    data-bs-toggle='dropdown'
  >{{@buttonText}}</button>
  <ul class='dropdown-menu'>
    {{#each @options as |option|}}
      <li
        class='dropdown-item py-2'
        role='button'
        {{on 'click' (fn this.doActionForSelectedOption option)}}
      >{{option}}</li>
    {{/each}}
  </ul>
</div>